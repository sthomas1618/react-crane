{
  "name": "react-crane",
  "version": "0.31.1",
  "description": "A React Components Library",
  "source": "src/index.js",
  "main": "dist/crane.cjs.js",
  "module": "dist/crane.esm.js",
  "browser": "dist/crane.min.js",
  "scripts": {
    "build": "npm run clean-dist && rollup --config",
    "build-storybook": "build-storybook",
    "clean-dist": "rimraf dist",
    "deploy-storybook": "storybook-to-ghpages",
    "lint:fix": "npm run lint -- --fix",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx}\" --ignore-pattern node_modules/",
    "start": "cross-env NODE_ENV=development start-storybook -p 6006",
    "test:coverage": "npm test -- --coverage",
    "test:typescript": "dtslint types",
    "test": "node scripts/test.js"
  },
  "types": "types/index.d.ts",
  "files": [
    "dist",
    "types",
    "less"
  ],
  "keywords": [
    "select",
    "dropdown",
    "multiselect",
    "react",
    "react-component"
  ],
  "author": "Stephen Thomas",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/sthomas1618/react-crane.git"
  },
  "peerDependencies": {
    "react": "^0.14.9 || ^15.3.0 || ^16.0|| ^17.0.0",
    "react-dom": "^0.14.9 || ^15.3.0 || ^16.0 || ^17.0.0"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "prop-types": "^15.6.1"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/plugin-transform-runtime": "^7.16.8",
    "@babel/preset-env": "^7.14.4",
    "@babel/preset-react": "^7.13.13",
    "@release-it/keep-a-changelog": "^2.3.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@storybook/addon-a11y": "^6.4.13",
    "@storybook/addon-actions": "^6.4.13",
    "@storybook/addon-essentials": "^6.4.13",
    "@storybook/addon-knobs": "^6.4.0",
    "@storybook/addon-storysource": "^6.4.13",
    "@storybook/react": "^6.4.13",
    "@storybook/storybook-deployer": "^2.8.10",
    "@types/react": "^16.9.19",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.1",
    "autoprefixer": "^7.1.2",
    "babel-jest": "^27.4.6",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "chalk": "^5.0.0",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.4",
    "dtslint": "^2.0.6",
    "enzyme": "^3.3.0",
    "eslint": "^8.6.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "jest": "^27.4.7",
    "jest-enzyme": "^7.1.2",
    "less": "^4.1.2",
    "less-loader": "^7.3.0",
    "nyc": "^11.7.1",
    "postcss": "^8.4.5",
    "postcss-flexbugs-fixes": "^3.2.0",
    "postcss-loader": "^2.0.6",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "release-it": "^14.12.3",
    "rimraf": "^2.6.2",
    "rollup": "^2.64.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-summary": "^1.3.0",
    "rollup-plugin-terser": "^7.0.2",
    "webpack": "^4.46.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js}"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/config/jest/setupTests.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/?(*.)(spec|test).js?(x)"
    ],
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "cobertura",
      "text"
    ],
    "coverageDirectory": "./coverage/",
    "testEnvironment": "jsdom"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  }
}
